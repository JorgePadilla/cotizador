<nav class="bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <%= link_to root_path do %>
            <span class="text-white font-bold text-xl"><%= t('app_name') %></span>
          <% end %>
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <%= link_to t('nav.dashboard'), root_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(root_path)}" %>
            <%= link_to t('nav.clients'), clients_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(clients_path)}" %>
            <%= link_to t('nav.suppliers'), suppliers_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(suppliers_path)}" %>
            <%= link_to t('nav.products'), products_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(products_path)}" %>
            <%= link_to t('nav.invoices'), invoices_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(invoices_path)}" %>
            <%= link_to t('nav.quotes'), quotes_path, class: "px-3 py-2 rounded-md text-sm font-medium #{active_class(quotes_path)}" %>
          </div>
        </div>
      </div>
      <div class="hidden md:block">
        <div class="ml-4 flex items-center md:ml-6 space-x-4">
          <% if Current.organization %>
            <span class="text-white text-sm font-medium"><%= Current.organization.name %></span>
          <% end %>
          
          <% if helpers.authenticated? && (Current.user&.admin? || Current.user&.owner?) %>
            <%= link_to "Admin", admin_users_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <% end %>
          
          <% if helpers.authenticated? %>
            <!-- Profile dropdown -->
            <div class="ml-3 relative">
              <div>
                <%= link_to profile_path, class: "bg-black flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black focus:ring-white" do %>
                  <span class="sr-only"><%= t('nav.profile') %></span>
                  <div class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                <% end %>
              </div>
            </div>
            
            <%= button_to session_path, method: :delete, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" do %>
              <%= t('nav.logout') %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="-mr-2 flex md:hidden">
        <!-- Mobile menu button -->
        <button type="button" class="bg-black inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="md:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <%= link_to t('nav.dashboard'), root_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(root_path)}" %>
      <%= link_to t('nav.clients'), clients_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(clients_path)}" %>
      <%= link_to t('nav.suppliers'), suppliers_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(suppliers_path)}" %>
      <%= link_to t('nav.products'), products_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(products_path)}" %>
      <%= link_to t('nav.invoices'), invoices_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(invoices_path)}" %>
      <%= link_to t('nav.quotes'), quotes_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(quotes_path)}" %>
      <%= link_to t('nav.profile'), profile_path, class: "block px-3 py-2 rounded-md text-base font-medium #{active_class(profile_path)}" %>
      
      
      <% if helpers.authenticated? %>
        <div class="mt-3 px-2 space-y-1">
          <%= link_to "Profile", profile_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <%= button_to session_path, method: :delete, class: "w-full text-left block px-3 py-2 rounded-md text-base font-medium text-red-300 hover:bg-gray-700 hover:text-white" do %>
            <%= t('nav.logout') %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="pt-4 pb-3 border-t border-gray-700">
      <div class="px-2">
        <%= link_to t('invoices.new'), new_invoice_path, class: "block w-full text-center px-3 py-2 rounded-md text-base font-medium bg-blue-500 text-white hover:bg-blue-700" %>
      </div>
    </div>
  </div>
</nav>
