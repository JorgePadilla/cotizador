<div class="w-full max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">

  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('clients.client_details') %></h1>
    <div class="flex space-x-2">
      <%= link_to t('clients.edit'), edit_client_path(@client), class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to t('clients.back_to_clients'), clients_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 bg-gray-50">
      <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @client.name %></h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= t('clients.attributes.rtn') %>: <%= @client.rtn %></p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('clients.attributes.name') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @client.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('clients.attributes.rtn') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @client.rtn %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('clients.attributes.address') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @client.address %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('clients.attributes.phone') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @client.phone %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= t('clients.attributes.email') %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @client.email %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-bold mb-4"><%= t('nav.invoices') %></h2>
    <% if @client.invoices.any? %>
      <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.invoice_number') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.date') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.total') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.status') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('clients.actions') %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @client.invoices.each do |invoice| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= invoice.invoice_number %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= invoice.created_at.strftime('%b %d, %Y') %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= format_currency(invoice.total) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= invoice.status == 'paid' ? 'bg-green-100 text-green-800' : (invoice.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800') %>">
                    <%= invoice.status&.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to t('clients.view'), invoice, class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500"><%= t('clients.no_invoices') %></p>
    <% end %>
    
    <div class="mt-4">
      <%= link_to t('dashboard.actions.new_invoice'), new_invoice_path(client_id: @client.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <div>
      <%= button_to t('clients.delete_client'), client_path(@client), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", form: { data: { turbo_confirm: t('clients.delete_confirm') } } %>
    </div>
  </div>
</div>
