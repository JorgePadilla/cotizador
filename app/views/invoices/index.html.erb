<div class="w-full max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <%= render(HeaderComponent.new(title: t('invoices.title'), subtitle: t('invoices.subtitle'))) %>

  <div class="flex justify-end mb-4">
    <%= link_to t('invoices.new'), new_invoice_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <% if @invoices.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.invoice_number') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.client') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.date') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.status') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('invoices.attributes.total') %></th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('actions.actions') %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @invoices.each do |invoice| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                <%= link_to invoice.invoice_number, invoice_path(invoice) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= link_to invoice.client.name, client_path(invoice.client), class: "text-blue-600 hover:text-blue-800" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= invoice.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case invoice.status 
                   when 'draft' then 'bg-gray-100 text-gray-800'
                   when 'pending' then 'bg-yellow-100 text-yellow-800'
                   when 'paid' then 'bg-green-100 text-green-800'
                   when 'cancelled' then 'bg-red-100 text-red-800'
                   else 'bg-gray-100 text-gray-800'
                   end %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                  <%= t("invoices.statuses.#{invoice.status}", default: invoice.status.titleize) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= format_currency(invoice.total) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <%= link_to t('actions.show'), invoice_path(invoice), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to t('actions.edit'), edit_invoice_path(invoice), class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= button_to t('actions.delete'), invoice_path(invoice), method: :delete, class: "text-red-600 hover:text-red-900 bg-transparent border-none cursor-pointer", form: { data: { turbo_confirm: t('actions.confirm_delete') } } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="py-10 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t('invoices.no_invoices') %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('invoices.get_started') %></p>
        <div class="mt-6">
          <%= link_to new_invoice_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            <%= t('invoices.new') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
