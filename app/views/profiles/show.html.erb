<%= render HeaderComponent.new(title: t('users.profile')) %>

<div class="bg-white shadow rounded-lg p-6 mb-6">
  <div class="flex items-center mb-6">
    <div class="bg-blue-100 p-3 rounded-full mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <div>
      <h2 class="text-2xl font-bold"><%= @user.name %></h2>
      <p class="text-gray-600"><%= @user.email_address %></p>
    </div>
  </div>
  
  <div class="border-t border-gray-200 pt-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-semibold mb-4 text-gray-900"><%= t('users.preferences') %></h3>
        <div class="bg-white border border-gray-200 p-6 rounded-lg shadow-sm">
          <div class="mb-6">
            <p class="text-sm text-gray-500 mb-2"><%= t('users.attributes.language') %></p>
            <p class="font-medium text-gray-900"><%= t("languages.#{@user.language}") %></p>
          </div>
          
          <div class="mb-6">
            <p class="text-sm text-gray-500 mb-2"><%= t('users.attributes.currency') %></p>
            <p class="font-medium text-gray-900"><%= t("currencies.#{@user.currency}") %></p>
          </div>
          
          <div class="pt-4 border-t border-gray-100">
            <%= form_with model: @user, url: "/profile/preferences", method: :patch, class: "space-y-4", data: { turbo: false } do |form| %>
              <div>
                <%= form.label :language, t('users.attributes.language'), class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.select :language, 
                  options_for_select([
                    [t('languages.en'), 'en'],
                    [t('languages.es'), 'es']
                  ], @user.language),
                  {}, 
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3" } 
                %>
              </div>
              <div>
                <%= form.label :currency, t('users.attributes.currency'), class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.select :currency, 
                  options_for_select([
                    [t('currencies.USD'), 'USD'],
                    [t('currencies.HNL'), 'HNL'],
                    [t('currencies.EUR'), 'EUR']
                  ], @user.currency),
                  {}, 
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3" } 
                %>
              </div>
              <div class="flex justify-end">
                <%= form.submit t('actions.save'), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold mb-4 text-gray-900"><%= t('users.edit_profile') %></h3>
        <div class="bg-white border border-gray-200 p-6 rounded-lg shadow-sm">
          <div class="mb-6">
            <p class="text-sm text-gray-600 mb-2"><%= t('users.attributes.name') %></p>
            <p class="font-medium text-gray-900"><%= @user.name %></p>
          </div>
          
          <div class="mb-6">
            <p class="text-sm text-gray-600 mb-2"><%= t('users.attributes.email') %></p>
            <p class="font-medium text-gray-900"><%= @user.email_address %></p>
          </div>
          
          <% if Current.user&.admin? || Current.user&.owner? %>
          <div class="mb-6">
            <p class="text-sm text-gray-600 mb-2"><%= t('users.attributes.default_tax') %></p>
            <p class="font-medium text-gray-900"><%= number_to_percentage(@user.default_tax, precision: 0) if @user.default_tax %></p>
          </div>
          <% end %>
          
          <% if @user.organization %>
            <div class="mb-6">
              <p class="text-sm text-gray-600 mb-2"><%= t('users.attributes.role') %></p>
              <p class="font-medium text-gray-900">
                <%= @user.role_string.capitalize %>
                <%= t('users.messages.in_organization', organization: @user.organization.name) %>
              </p>
            </div>
          <% else %>
            <div class="mb-6">
              <p class="text-sm text-gray-600 mb-2"><%= t('users.attributes.role') %></p>
              <p class="font-medium text-gray-900">
                <%= @user.role_string.capitalize %>
              </p>
            </div>
          <% end %>
          
          <div class="pt-4 border-t border-gray-100">
            <p class="text-gray-600 mb-4 text-sm"><%= t('users.messages.profile_updated') %></p>
            <%= link_to t('users.edit_profile'), profile_edit_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 w-full justify-center" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
