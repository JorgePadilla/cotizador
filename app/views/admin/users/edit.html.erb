<%= render HeaderComponent.new(title: "Edit User Role") %>

<div class="bg-white shadow rounded-lg p-6">
  <div class="max-w-md">
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
        <p class="mt-1 text-sm text-gray-900"><%= @user.email_address %></p>
      </div>

      <div>
        <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
        <p class="mt-1 text-sm text-gray-900"><%= @user.name %></p>
      </div>

      <div>
        <%= form.label :organization_id, "Organization", class: "block text-sm font-medium text-gray-700" %>
        <p class="mt-1 text-sm text-gray-900"><%= @user.organization&.name || "No organization" %></p>
      </div>

      <div>
        <%= form.label :role, "Role", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role, 
          options_for_select([
            ["Owner", 0],
            ["Admin", 1], 
            ["Member", 2]
          ], @user.role),
          {}, 
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3" } 
        %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", admin_users_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-md" %>
        <%= form.submit "Update Role", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
      </div>
    <% end %>
  </div>
</div>